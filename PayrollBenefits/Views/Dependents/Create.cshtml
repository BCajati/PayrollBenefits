@model PayrollBenefits.Models.Employees.Dependent

@{
    ViewData["Title"] = "Add Dependent for ";
}

<h2>@ViewData["Parent"]</h2>

<h4>Dependent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Relationship" class="control-label"></label>
                <select class="form-control" id="Relationship" name="Relationship">
                    <option>Spouse</option>
                    <option>Child</option>
                </select>
                <span asp-validation-for="Relationship" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.Hidden("EmployeeId")
                <input type="submit" value="Add Dependent" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-controller="Employees" asp-action="Index">Back to Employees</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
