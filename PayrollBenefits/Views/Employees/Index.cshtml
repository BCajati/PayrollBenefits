@model IEnumerable<PayrollBenefits.Models.Employees.Employee>

@{
    ViewData["Title"] = "Employees";
}

<h2>Employee's of ST Enterprises LLC</h2>
<h3>Select button "Payroll Details" to see the benefit cost per employee</h3>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id"><button>Payroll Details</button></a>  |
                <a asp-controller="Dependents" asp-action="Create" asp-route-employeeid="@item.Id">Add Dependent</a>  |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>  |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-action="Create"><button>Add New Employee</button></a>
</p>
